{
  "name": "susaas",
  "version": "0.0.1",
  "repository": "https://github.com/sap-samples/btp-cap-multitenant-saas",
  "license": "Apache License 2.0",
  "description": "Sustainable SaaS Onboarding",
  "scripts": {
    "install": "npm install --include=dev --prefix ../code",
    "build": "npx -p @sap/cds-dk@8 cds build -in ../code --profile production",
    "-----------------------": "",
    "-Manual HTML5 Deployment-": "",
    "/---------------------/": "",
    "deployer:run": "cd ../code/app/html5-deployer && node ../node_modules/@sap/html5-app-deployer/index.js",
    "deployer:hybrid": "cds bind --exec --profile hybrid npm run deployer:run",
    "------------------------": "",
    "-Helm Default Scripts-": "",
    "/----------------------/": "",
    "helm:install:obd": "helm install susaas-onboarding ./charts -f ./charts/values-private.yaml -n default",
    "helm:upgrade:obd": "helm upgrade susaas-onboarding ./charts -f ./charts/values-private.yaml -n default",
    "helm:uninstall:obd": "helm uninstall susaas-onboarding -n default",
    "-------------------------": "",
    "-UI Build Scripts-": "",
    "/-----------------------/": "",
    "ui:apps": "npm run ui:home && npm run ui:onboarding",
    "ui:home": "npm run build:copy --prefix ../code/app/ui-home/",
    "ui:onboarding": "npm run build:copy --prefix ../code/app/ui-onboarding/",
    "--------------------------": "",
    "-Container Build Scripts-": "",
    "--- RUN LIKE npx --yes cross-env IMAGE_PREFIX=sap-demo npm run build:all ---": "",
    "/------------------------/": "",
    "build:all": "npm run build:srv && npm run build:router && npm run build:html5-deployer",
    "build:srv": "cross-env-shell pack build $IMAGE_PREFIX/obd-srv --path ../code/gen/srv --builder paketobuildpacks/builder:base --buildpack gcr.io/paketo-buildpacks/nodejs -e BP_LAUNCHPOINT=./node_modules/@sap/cds/bin/cds-serve.js",
    "build:router": "cross-env-shell docker build -t $IMAGE_PREFIX/obd-router ../code/router",
    "build:html5-deployer": "cross-env-shell docker build -t $IMAGE_PREFIX/obd-html5-deployer ../code/app/html5-deployer",
    "---------------------------": "",
    "-Container Push Scripts-": "",
    "--- RUN LIKE npx --yes cross-env IMAGE_PREFIX=sap-demo npm run push:all ---": "",
    "/-------------------------/": "",
    "push:all": "npm run push:srv && npm run push:router && npm run push:html5-deployer",
    "push:srv": "cross-env-shell docker push $IMAGE_PREFIX/obd-srv",
    "push:router": "cross-env-shell docker push $IMAGE_PREFIX/obd-router",
    "push:html5-deployer": "cross-env-shell docker push $IMAGE_PREFIX/obd-html5-deployer"
  }
}
